{
  "name": "trip",
  "description": "A minimalist task runner.",
  "version": "0.8.5",
  "ava": {
    "babel": false,
    "files": "dist/test/**/*.test.js",
    "source": "dist/lib/**/*.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "bin": {
    "trip": "cli.js"
  },
  "dependencies": {
    "babel-polyfill": "^6.6.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.6.5",
    "bluebird": "^3.3.4",
    "chalk": "^1.1.1",
    "clear-trace": "0.0.7",
    "liftoff": "^2.2.0",
    "lodash": "^4.6.1",
    "minimist": "^1.2.0",
    "pretty-hrtime": "^1.0.2",
    "tildify": "^1.1.2"
  },
  "devDependencies": {
    "ava": "^0.12.0",
    "babel-cli": "^6.6.5",
    "execa": "^0.2.2",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.3"
  },
  "engines": {
    "node": ">=0.10"
  },
  "files": [
    "dist/lib",
    "src/lib",
    "cli.js"
  ],
  "license": "MIT",
  "repository": "tripjs/trip",
  "scripts": {
    "build": "rimraf dist && babel src --out-dir dist --source-maps",
    "build:watch": "rimraf dist && babel src --out-dir dist --watch --source-maps",
    "prepublish": "npm run build",
    "test": "ava",
    "test:watch": "ava --watch"
  }
}
